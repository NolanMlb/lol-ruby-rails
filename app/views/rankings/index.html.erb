<h1 class="text-2xl font-bold mb-6">Classement des équipes 🏆</h1>

<table class="min-w-full bg-white shadow rounded overflow-hidden">
  <thead class="bg-gray-100 text-left text-sm uppercase text-gray-600">
    <tr>
      <th class="px-6 py-3">Rang</th>
      <th class="px-6 py-3">Équipe</th>
      <th class="px-6 py-3">Victoires</th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200">
    <% @teams.each_with_index do |team, index| %>
      <tr>
        <td class="px-6 py-4"><%= index + 1 %></td>
        <td class="px-6 py-4"><%= link_to team.name, team_path(team), class: "text-blue-600 hover:underline" %></td>
        <td class="px-6 py-4"><%= team.victories_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1 class="text-2xl font-bold mb-4">Toutes les équipes</h1>

<%= link_to '➕ Nouvelle équipe', new_team_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>

<ul class="mt-6 space-y-3">
  <% @teams.each do |team| %>
    <li class="bg-white p-4 rounded shadow hover:bg-gray-50">
      <%= link_to team.name, team_path(team), class: "text-lg font-semibold text-blue-600 hover:underline" %>
    </li>
  <% end %>
</ul>